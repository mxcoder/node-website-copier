#!/usr/bin/env node

var util = require('util'),
    exec = require('child_process').exec,
    fs = require('fs'),
    path = require('path'),
    program = require('commander'),
    wwwcopy = require('../lib/node-website-copier'),
    url;

program
  .version('0.0.1')
  .usage('[options] <URL...>')
  .option('--verbose', 'Displays debug info')
  .parse(process.argv);

// Read url from params
url = program.args[0];
if (!url) program.help();

wwwcopy.download(url);
