#!/usr/bin/env node

var
    program = require('commander'),
    download = require('../lib/node-website-copier').download,
    url;

program
  .version('0.0.1')
  .usage('[options] <URL...>')
  .option('--verbose', 'Displays debug info')
  .parse(process.argv);

// Read url from params
url = program.args[0];
if (!url) program.help();

try {
    download(url, program.verbose);
} catch(e) {
    console.log(e);
}
